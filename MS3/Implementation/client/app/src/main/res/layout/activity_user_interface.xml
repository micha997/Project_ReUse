<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.th_koeln.steve.klamottenverteiler.UserInterface">

    <TextView
        android:text="Klamotten Verteiler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Klamotten eintragen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="16dp"
        android:id="@+id/btnKlamottenAnlegen" />

    <Button
        android:text="Klamotten suchen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="16dp"
        android:id="@+id/btnKlamottenSuchen"
        android:layout_below="@+id/btnKlamottenAnlegen"
        android:layout_alignLeft="@+id/btnKlamottenAnlegen"
        android:layout_alignStart="@+id/btnKlamottenAnlegen" />



    <Button
        android:id="@+id/btnChooseContext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnKlamottenSuchen"
        android:layout_gravity="center_horizontal"

        android:text="Outfit Suchen" />

    <Button
        android:id="@+id/btnEditProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/btnChooseContext"
        android:layout_gravity="center_horizontal"
        android:text="Edit Profile" />

    <Button
        android:id="@+id/btnMyClothing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/btnEditProfile"
        android:layout_gravity="center_horizontal"
        android:text="My Clothing" />

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnChooseContext"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btnChooseContext"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:text="Logout" />

</RelativeLayout>
